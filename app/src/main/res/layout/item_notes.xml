<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:backgroundTint="#343a40"
        android:layout_margin="@dimen/_8sdp">
        <View
            android:id="@+id/redot1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/red_dot"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tiele2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes Title"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="akjbvjkbvjkbajkebvjkberjvjajkbjkebvjkbjakebjkrbjbvjkabrjkbjbaaerjkvbkj"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21 march 2021"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>